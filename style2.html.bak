/* --- ðŸŽ¨ The Official Brand Palette --- */
:root {
    /* The Core Colors */
    --deep-gold: #C59232;
    --sunny-orange: #FFB56B;
    --pale-yellow: #FFF275;
    --maker-silver: #A6A6A6;
    --clean-white: #FFFFFF;
    
    /* Softer versions for backgrounds */
    --pale-yellow-wash: #fffdf0; /* A very very light yellow for background glow */
    --pale-orange-wash: #fff5ec; /* A very light orange for the form box */
}

/* --- General Reset & Typography --- */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Quicksand', sans-serif;
    /* The background is no longer flat white. It has a sunny glow. */
    background: linear-gradient(135deg, var(--clean-white) 0%, var(--pale-yellow-wash) 100%);
    color: var(--maker-silver);
    line-height: 1.6;
    text-align: center;
    padding: 30px 15px;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* --- The Main "Cardstock" Container --- */
.maker-card {
    max-width: 550px;
    width: 100%;
    background: var(--clean-white);
    padding: 50px 30px;
    /* Rounded corners like a nice die-cut card */
    border-radius: 25px;
    /* A thick Gold border to feel premium */
    border: 4px solid var(--deep-gold);
    /* A soft, deep shadow makes it float off the page */
    box-shadow: 0 20px 50px rgba(197, 146, 50, 0.2); 
    position: relative;
}

/* --- Header & Logo --- */
.logo-header {
    margin-bottom: 35px;
}

.brand-logo {
    font-family: 'Cookie', cursive;
    color: var(--deep-gold);
    font-size: 4.5rem; /* Bigger and bolder */
    line-height: 1.1;
    font-weight: normal;
    /* A tiny metallic text shadow */
    text-shadow: 1px 1px 0px #e6c68a;
    margin-bottom: 15px;
}

/* CSS Trick: Creating fake "stitching" lines using borders */
.stitch-line-gold {
    margin: 0 auto;
    width: 60%;
    border-bottom: 3px dashed var(--deep-gold);
    opacity: 0.5;
}
.stitch-line-silver {
    margin: 30px auto;
    width: 80%;
    border-bottom: 2px dotted var(--maker-silver);
    opacity: 0.5;
}

/* --- Welcome Content --- */
.welcome-content {
    margin-bottom: 40px;
}

.headline {
    color: var(--deep-gold);
    font-weight: 700;
    font-size: 1.8rem;
    margin-bottom: 15px;
}

.subtext {
    font-size: 1.15rem;
    color: #888; /* Slightly darker than silver for readability */
    font-weight: 500;
    max-width: 90%;
    margin: 0 auto;
}

/* --- The Featured Sign-up Box --- */
.signup-box-container {
    margin-bottom: 40px;
}

.signup-box {
    /* Using the soft orange wash background */
    background-color: var(--pale-orange-wash);
    border: 2px solid var(--sunny-orange);
    padding: 30px;
    border-radius: 20px;
}

.signup-box h3 {
    color: var(--deep-gold);
    font-size: 1.4rem;
    margin-bottom: 5px;
}

.signup-box p {
    color: var(--maker-silver);
    margin-bottom: 20px;
}

/* --- The Form Elements --- */
form {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

input[type="email"] {
    padding: 16px;
    border: 3px solid #e0e0e0;
    background: var(--clean-white);
    border-radius: 50px;
    font-family: 'Quicksand', sans-serif;
    font-size: 1rem;
    outline: none;
    transition: all 0.3s ease;
}

input[type="email"]:focus {
    border-color: var(--sunny-orange);
    box-shadow: 0 0 0 3px rgba(255, 181, 107, 0.2);
}

button {
    padding: 16px;
    /* A rich gold gradient for the button */
    background: linear-gradient(to bottom right, var(--deep-gold), #b0822b);
    color: var(--clean-white);
    border: none;
    border-radius: 50px;
    font-family: 'Quicksand', sans-serif;
    font-weight: 700;
    font-size: 1.2rem;
    cursor: pointer;
    box-shadow: 0 5px 15px rgba(197, 146, 50, 0.3);
    transition: all 0.3s ease;
}

button:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 8px 20px rgba(197, 146, 50, 0.4);
}

.tiny-text {
    font-size: 0.85rem;
    margin-top: 12px;
    color: var(--maker-silver);
}

/* --- Footer Details --- */
.categories {
    margin-bottom: 15px;
    color: var(--deep-gold);
    font-weight: 700;
    font-size: 0.95rem;
}

.copyright {
    font-size: 0.9rem;
    color: var(--maker-silver);
}

/* --- Mobile adjustments --- */
@media (min-width: 600px) {
    /* On bigger screens, put the input and button side-by-side */
    form {
        flex-direction: row;
    }
    input[type="email"] {
        flex-grow: 2;
    }
    button {
        flex-grow: 1;
    }
    .brand-logo {
        font-size: 5.5rem;
    }
}
